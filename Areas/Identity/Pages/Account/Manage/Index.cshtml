@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<div>

<h3 class="text-center">@ViewData["Title"]</h3>
    <partial name="_StatusMessage" for="StatusMessage" />


    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div>
            <label asp-for="Username" class="form-label mt-4"></label>
            <input asp-for="Username" type="text" class="form-control" disabled>
            <span asp-validation-for="Username" class="text text-danger"> </span>
        </div>
        <div>
            <label asp-for="Input.FName" class="form-label mt-4"></label>
            <input asp-for="Input.FName" type="text" class="form-control" />
            <span asp-validation-for="Input.FName" class="text text-danger"> </span>
        </div>
        <div>
            <label asp-for="Input.LName" class="form-label mt-4"></label>
            <input asp-for="Input.LName" type="text" class="form-control" />
            <span asp-validation-for="Input.LName" class="text text-danger"> </span>
        </div>
        <div>
            <label asp-for="Input.PhoneNumber" class="form-label mt-4"></label>
            <input asp-for="Input.PhoneNumber" type="text" class="form-control" />
          
            <span asp-validation-for="Input.PhoneNumber" class="text text-danger"> </span>
        </div>
        
        <div>
            <label asp-for="Input.ProfilePicture" class="form-label mt-4"></label>
            <input asp-for="Input.ProfilePicture" class="form-control"
            id="FormFile" type="file"
            onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])">
            <span asp-validation-for="Input.ProfilePicture" class="text text-danger"> </span>
        </div>
        <div>
            <a asp-page="./Email">
                Change your email
            </a>
        </div>
        <div>
            
            <a asp-page="./ChangePassword">
                Change your passwod
            </a>
      </div>
       
        <div class="mt-4 text-center">
            @if (Model.Input.ProfilePicture != null)
            {
                <img id="profilePicture" alt="profile" class="w-25"
                     src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" />
            }
            else
            {
                <img id="profilePicture" class="w-25" alt="profile" src="/assets/night.jpg" />
            }
        </div>
        <div class="mt-4 text-center">
            <button id="update-profile-button" type="submit" class="btn bg-dark" style="color: #FFD700">Update</button>
        </div>

    </form>













