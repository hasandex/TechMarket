@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

@{
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

                @if (!Model.Any())
                {
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">No Products!</h4>
                        <p class="mb-0">No Products were added yet</p>
                    </div>
                }

                else
                {
    
    <div class="row mt-5 mb-3">

        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-2">
                <div class="card mb-3 h-100" style="margin-inline:auto;max-width: 20rem;">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">
                        <img class="card-img-top" src="@($"{Settings.ItemImageStorePath}/{product.Cover}")" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;max-width: 300px;">@product.Description</p>
                        <div style="display: flex; justify-content: space-between;  align-items: center;">
                        <button class="btn btn-primary" style="margin-right: 1rem;">Add To Cart</button>
                        <h4 style="padding-top:15px">@product.Price$</h4>
                        </div>
                    </div>
                </div>
            </div>


        }
    </div>

}

